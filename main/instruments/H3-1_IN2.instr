    w1 = guide_start_width, h1 = guide_start_height, l = 17, mright=m, mleft=m, mtop=m, mbottom=m, R0=R0, alpha=alpha)
  AT (0, 0, 0) RELATIVE Guide_start_arm

COMPONENT Monlam = Monitor_nD(
    xwidth = guide_start_width, yheight = guide_start_height, options = "lambda bins = 100 limits = [0 20]", filename = "H3-1_IN2.lam")
  AT (0, 0, 17.0001) RELATIVE PREVIOUS
