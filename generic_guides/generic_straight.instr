DEFINE INSTRUMENT generic_parabolic_nose(guide_length = 10, m_side = 2, m_top = 6, R0=0.99, alpha = 3.3, sample_height = 0.01)

DECLARE
%{
%}

INITIALIZE
%{
%}

TRACE

%include "../H3.instr"

COMPONENT Main_guide = Guide_gravity(
    w1=guide_start_width, 
    h1=guide_start_height, 
    l=guide_length, 
    R0=R0, 
    alpha=alpha, 
    mleft=m_side, 
    mright=m_side, 
    mtop=m_top, 
    mbottom=m_top, 
    G=-9.81)
AT (0, 0, 0) RELATIVE Guide_start_arm

COMPONENT Sample = Monitor_nD(
    xwidth=guide_start_width, 
    yheight=sample_height, 
    bins=100, 
    options="dx limits = [-1 1] dy limits = [-1 1]")
AT (0, 0, guide_length + 0.01) RELATIVE PREVIOUS

FINALLY
%{
%}
END