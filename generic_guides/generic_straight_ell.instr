DEFINE INSTRUMENT generic_straight( nose_length = 3, linh = 10.5, louth = 0.5, linw = 10.5, loutw = 0.5, guide_length = 10, m_str_side = 2, m_top = 6, sample_height = 0.01, sample_width = 0.01, sample_dist=0.5)

DECLARE
%{
%}

INITIALIZE
%{
%}

TRACE

%include "../main/H3_source.instr"

COMPONENT Main_guide = Guide_gravity(
    w1=guide_start_width, 
    h1=guide_start_height, 
    l=guide_length-nose_length, 
    R0=R0, 
    alpha=alpha, 
    mleft=m_str_side, 
    mright=m_str_side, 
    mtop=m_top, 
    mbottom=m_top, 
    G=-9.81)
AT (0, 0, 0) RELATIVE Guide_start_arm

COMPONENT Nose_guide = Guide_tapering(
    option="elliptical", 
    w1=guide_start_width, 
    h1=guide_start_height, 
    l=nose_length, 
    linh = linh, 
    louth = louth,
    linw = linw,
    loutw = loutw,
    mx=m_str_side,
    my=m_top)
AT (0, 0, guide_length - nose_length) RELATIVE PREVIOUS

COMPONENT Sample = Monitor_nD(
    xwidth=sample_width, 
    yheight=sample_height, 
    bins=100, 
    options="dx limits = [-0.5 0.5]")
AT (0, 0, nose_length + sample_dist) RELATIVE PREVIOUS

FINALLY
%{
%}
END
