DEFINE INSTRUMENT generic_half_elliptic_nose(guide_length = 10, nose_length = 3, m_side = 2, m_top = 6, focal_dist = 0.5, R0=0.99, alpha = 3.3, sample_height = 0.01)

DECLARE
%{
%}

INITIALIZE
%{
%}

TRACE

%include "../H3.instr"

COMPONENT Main_guide = Guide_gravity(
    w1=guide_start_width, 
    h1=guide_start_height, 
    l=guide_length - nose_length, 
    R0=R0, 
    alpha=alpha, 
    mleft=m_side, 
    mright=m_side, 
    mtop=m_top, 
    mbottom=m_top, 
    G=-9.81)
AT (0, 0, 0) RELATIVE Guide_start_arm

COMPONENT Nose_guide = Guide_tapering(
    option="elliptical", 
    w1=guide_start_width, 
    h1=guide_start_height, 
    l=nose_length, 
    linh=nose_length + focal_dist, 
    louth=focal_dist,
    R0=R0, 
    alphax=alpha, 
    alphay = alpha,
    mx=m_side,
    my=m_top)
AT (0, 0, guide_length - nose_length) RELATIVE PREVIOUS

COMPONENT Sample = Monitor_nD(
    xwidth=guide_start_width, 
    yheight=sample_height, 
    bins=100, 
    options="x y")
AT (0, 0, nose_length + focal_dist) RELATIVE PREVIOUS

FINALLY
%{
%}
END